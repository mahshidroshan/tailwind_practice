{
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3"
  },
  "scripts": {
    "prebuild": "mkdir dist 2>nul & mkdir dist/img 2>nul",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build:html": "npx copyfiles -u 1 src/*.html dist/",
    "build:img": "npx copyfiles -u 1 src/img/* dist/img/",
    "build": "npm run prebuild && build:css && build:html && build:img",
    "watch": "npx tailwindcss -i ./src/input.css -o ./src/output.css --watch"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  }
}
